{
  "name": "email-guard",
  "version": "1.0.0",
  "description": "Advanced Chrome extension for email protection against phishing and malicious attacks",
  "main": "background.js",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js && node scripts/inject-env.js",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"**/*.{ts,json,css,html,md}\""
  },
  "keywords": [
    "email",
    "security",
    "phishing",
    "protection",
    "chrome-extension",
    "gmail",
    "outlook",
    "cybersecurity",
    "malware-protection",
    "link-verification"
  ],
  "author": "Email Guard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/email-guard.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/email-guard/issues"
  },
  "homepage": "https://github.com/yourusername/email-guard#readme",
  "dependencies": {
    "@azure-rest/ai-inference": "^1.0.0-beta.2",
    "@azure/core-auth": "^1.5.0",
    "@azure/core-sse": "^2.3.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.24",
    "dotenv": "^16.6.1",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
